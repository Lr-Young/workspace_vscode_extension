{
  "name": "workspace-benchmark",
  "displayName": "Workspace Benchmark",
  "description": "workspace extension",
  "publisher": "lryoung",
  "version": "0.11.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lr-Young/workspace_vscode_extension.git"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "workspace.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "workspace.benchmark",
        "title": "Workspace Benchmark"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chat-assistant-sidebar",
          "title": "Chat Assistant",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "chat-assistant-sidebar": [
        {
          "type": "webview",
          "id": "chat-assistant-view",
          "name": "LLM Chat",
          "icon": "media/icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "package": "cross-env NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "cross-env": "^10.0.0",
    "esbuild": "^0.16.10",
    "esbuild-plugin-copy": "^2.0.1",
    "eslint": "^9.21.0",
    "glob": "^8.0.3",
    "prettier": "^2.8.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@langchain/community": "^0.3.47",
    "@langchain/core": "^0.3.61",
    "@langchain/deepseek": "^0.0.2",
    "@types/vscode-webview": "^1.57.5",
    "@types/xlsx": "^0.0.35",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "fast-glob": "^3.3.3",
    "langchain": "^0.3.29",
    "reflect-metadata": "^0.2.2",
    "tree-sitter": "^0.22.4",
    "tree-sitter-python": "^0.23.6",
    "typeorm": "^0.3.25",
    "xlsx": "^0.18.5"
  }
}
